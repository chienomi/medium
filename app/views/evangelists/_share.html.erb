<span class="btn-group">
    <button class="btn btn-default btn-sm" id="share_link" type="button"> Share URL <i class="fa fa-link" aria-hidden="true"></i> <i class="fa fa-caret-down" aria-hidden="true"></i></button>
</span>
<div class = "form-group" id = "share_show_toggle" style="display: none;">
      <%= form_for @evangelist, remote: true do |f| %>
          <div class="input-group">
              <span class="input-group-addon"> <i class="fa fa-link" aria-hidden="true"></i> </span>
                <%= f.text_field :all_categories,  autocomplete: "on" , required: false,
                class: "form-control",id: "url_for_share", value: "http://.../.../"+@evangelist.id.to_s%>
                <button type="button" class="btn btn-primary" style="display: none;"></button>
          </div>
      <%end%>
</div>

<script type="text/javascript">
$(function(){

      $('#share_link').click(function() {
            $('#share_show_toggle').toggle(425);
            $('#url_for_share').focus();
          });
});
</script>
